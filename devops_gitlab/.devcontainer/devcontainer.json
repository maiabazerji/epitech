{
    "name": "Trinity Dev Container",
    "dockerComposeFile": [
        "./docker-compose.yml"
    ],
    "service": "backend",
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder}/app,target=/workspace,type=bind"
    ]
}
